@charset "utf-8";
@import url(http://fonts.googleapis.com/css?family=Righteous);
@import url(http://fonts.googleapis.com/earlyaccess/nanumpenscript.css);

/*  Reset CSS  */
* { margin:0;  padding:0;}
ol,ul { list-style: none; }
a { outline:0; text-decoration:none; color:#555; }
img { border:0;}
body { font:12px/1.6 Righteous; color:#555; min-width:1400px; } 

h1 { position:fixed; top:25px; left:20px; z-index:10;}

#gnb { position:fixed; top:280px; left:40px; z-index:9;}
#gnb>li {width:200px; height:40px; cursor:pointer; transition:all 0.5s; opacity:0.8; margin-bottom:10px;}
#gnb>li.on { opacity:1;}
#gnb>li.on a i { margin-right:20px;}
#gnb>li.on>a { background:#111; color:#fff;}
#gnb>li:hover { background:#000; opacity:0.8;}
#gnb>li>a { display:block; width:100%; height:100%; color:#111; transform:skewX(deg); font: 16px/2.5 Righteous; box-sizing:border-box; padding-right:20px; text-align:right;}
#gnb>li:hover>a { background:#111; color:#fff;}

#gnb>li>ul { position:absolute; top:-10px; left:200px;}
#gnb>li>ul>li { width:200px; height:40px; border-bottom:1px solid #ffb813;}
#gnb>li>ul>li>a { display:block; width:200px; height:40px; color:#fff; transform:skewX(deg); font: 16px/2.5 Righteous; box-sizing:border-box; padding-right:20px; text-align:right; background:#ffb813; opacity:0.5; text-align:center;}
#gnb>li>ul>li:hover a{ background:#111;}
#gnb>li>ul>li a.on{ background:#111;}


.vid { position:fixed; width:100%; height:100%; background-color:#fff7a6}
.wrap { position:fixed; width:100%; min-width:1400px; height:100%; background:url(../img/cover.png) no-repeat center center; background-size:cover;}
.origin { width:1100px; height:740px;  position:fixed; top:50%; margin-top:-370px; left:50%; margin-left:-270px; background:url(../img/headset2.png) no-repeat left center; background-size:contain;}
.origin>p { position:absolute; width:242px; height:242px; border-radius:121px; right:-7px; top:50%; margin-top:-120px; transform-origin:-250px center; opacity:0; }
.origin>p>img { position:absolute; top:0px; left:0px;}
.c1 { background:lightblue; transform:rotate(-90deg); transition:all 0.8s 0s; }
.c2 { background:orange; transform:rotate(-55deg); transition:all 0.8s 0.3s; }
.c3 { background:pink; transform:rotate(-20deg); transition:all 0.8s 0.6s; }
.c1 img { transform:rotate(33deg);}
.c2 img { transform:rotate(-8deg);}
.c3 img { transform:rotate(-45deg);}
.sl { position:absolute; top:190px; left:160px;}
.music { position:absolute; bottom:100px; left:200px;}

.origin:hover .c1 { transform:rotate(-35deg); opacity:1;}
.origin:hover .c2 { transform:rotate(5deg); opacity:1;}
.origin:hover .c3 { transform:rotate(45deg); opacity:1;}


#sns { position:fixed; top:50px; right:180px;}
#sns li { float:left; margin-right:20px; opacity:0.7; transition:all 0.5s;}
#sns li:hover { opacity:1; transform:scale(1.3);}
#sns li i { font-size:20px; color:#ff9b00; }
